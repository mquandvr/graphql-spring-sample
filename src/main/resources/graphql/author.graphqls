schema {
    query: Query,
    mutation: Mutation
}

type Author {
    id: ID!
    firstName: String!
    lastName: String!
    books: [Book]
    bookById(id: ID!): Book
}

type Query {
	# Find all authors
    findAllAuthors: [Author]!
    # Count all authors
    countAuthors: Long!
}

type Mutation {
	# Add author by FirstName and LastName
    newAuthor(firstName: String!, lastName: String!) : Author!
}